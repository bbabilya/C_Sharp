@model Wedding;
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta WedderOne="viewport" content="width=device-width, initial-scale=1.0" />
        <title>New Wedding Form (Wedding Planner)</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous" />
    </head>
    <body class="bg-dark">
        <div class="mx-auto mt-4 mb-4 w-25 text-light p-4 rounded border border-3 border-dark" style="background-color: #474747;">
            <form asp-action="WeddingSubmit" asp-controller="Wedding" method="post">
                <div class="WedderOne d-flex align-items-center mt-4 mb-4">
                    <label asp-for="WedderOne" class="form-label me-2"></label>
                    <div class="error d-flex flex-column">
                        <input type="text" class="form-control" asp-for="WedderOne" />
                        <span asp-validation-for="WedderOne" class="text-danger"></span>
                    </div>
                </div>
                <div class="WedderTwo d-flex align-items-center mt-4 mb-4">
                    <label asp-for="WedderTwo" class="form-label me-2"></label>
                    <div class="error d-flex flex-column">
                        <input type="text" class="form-control" asp-for="WedderTwo" />
                        <span asp-validation-for="WedderTwo" class="text-danger"></span>
                    </div>
                </div>
                <div class="Date d-flex align-items-center mt-4 mb-4">
                    <label asp-for="Date" class="form-label me-2"></label>
                    <div class="error d-flex flex-column">
                        <input type="date" class="form-control" asp-for="Date" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                </div>
                <div class="Address d-flex mt-4 mb-4 align-items-center">
                    <label asp-for="Address" class="form-label me-2"></label>
                    <div class="error d-flex flex-column">
                        <input type="text" class="form-control" id="Address" asp-for="Address" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-danger w-50">Submit</button>
                </div>
            </form>
        </div>
    </body>
</html>
