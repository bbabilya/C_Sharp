@model Dish

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dish Details (CRUDelicious)</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>
<body class = "bg-dark text-light">
    <div class="container w-50">
    <div class="header d-flex flex-column">
    <h3>@Model.Name</h3>
    <h4 class="pb-2 border-bottom border-secondary"><i>@Model.Chef</i></h4>
    </div>
    <div class="details d-flex flex-column">
        <span class="mb-2">Tastiness: @Model.Tastiness</span>
        <span class="pb-2 border-bottom border-secondary">Calories: @Model.Calories</span>
    </div>
    <div class="description">
        <h6 class="pt-4 pb-4"><i>@Model.Description</i></h6>
    </div>
    <div class="button d-flex justify-content-center">
        <a href="/"><button class="btn btn-secondary">Home</button></a>
        <a href="/dish/@Model.DishId/edit"><button class="btn btn-success">Edit</button></a>
        <a href="/@Model.DishId/delete"><button class="btn btn-danger">Delete</button></a>
    </div>
</div>

</body>
</html>