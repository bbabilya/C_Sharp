@model List<Dish>;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <title>CRUDelicious!</title>
</head>
<body class="bg-dark text-light">
    <div class="container mx-auto w-75 text-center">
        <h1 class="pt-2 pb-4">Welcome to CRUDelicious!</h1>
        <div class="header d-flex justify-content-between">
            <div class="tagline pb-2 border-bottom border-secondary">
                <h3>Check out some recent dishes!</h3>
            </div>
            <div class="createDish">
                <a href="/new"><button class="btn btn-secondary">Add a Dish</button></a>
            </div>
        </div>
        <div class="body d-flex">
            <div class="dishes mt-4">
                @foreach (var dish in Model)
                {
                    <div class="text-start">
                        <a href="/dish/@dish.DishId"><b>@dish.Name</b></a> by @dish.Chef
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>