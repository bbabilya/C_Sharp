@model Association

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product (or Duck) Details (Products n' Categories)</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>
<body class = "bg-dark text-light">
    <div class="container w-50">
    <div class="header d-flex flex-column">
    <h3>@ViewBag.SingleCategory.Name</h3>
    </div>
    <div class="categories d-flex flex-column">
        <div class="ProductList">
            <h4>Categories:</h4>
            @foreach (Product p in ViewBag.AssociatedProducts)
            {
                <div class="Category">
                    <span class="mb-2">@p.Name</span>
                </div>
            }
        </div>
        <div class="productAdd">
            <form asp-action="CatAssociationSubmission" asp-controller="Category" method="post" asp-route-id="@ViewBag.SingleCategory.CategoryId" class="d-flex flex-column align-items-center">
            <div class="ProductId d-flex align-items-center mt-4 mb-4">
                <span>Add Product:</span>
                <div class="error d-flex flex-column">
                    <select class="form-select ms-2" id="ProductId" asp-for="ProductId">
                        <option selected disabled>Select a value!</option>
                        @foreach (Product p in ViewBag.ListedProducts)
                    {
                        <option value="@p.ProductId">@p.Name</option>
                    }
                </select>
                </div>
            </div>
            <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-danger">Submit</button>
            </div>
        </form>
        </div>
    </div>
    <div class="button d-flex justify-content-center">
        <a href="/"><button class="btn btn-secondary">Home</button></a>
    </div>
</div>

</body>
</html>