@model Product;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <title>Products n' Categories</title>
</head>
<body class="bg-dark text-light d-flex flex-column">
    <div class="header mx-auto d-flex flex-column align-items-center">
    <p><a href="">Ducks</a> | <a href="/categories">Breeds</a></p>
    ---------------- * ----------------
    <h1>I really like ducks tbh.</h1>
    </div>
<div class="container d-flex justify-content-around">
<div class="mt-4 mb-4 w-50 text-light p-4 border rounded-pill border-3 border-dark" style="background-color: #474747">
        <form asp-action="ProductSubmission" asp-controller="Product" method="post" class="d-flex flex-column align-items-center">
            <div class="Name d-flex align-items-center mt-4 mb-4">
                <label asp-for="Name" class="form-label me-2"></label>
                <div class="error d-flex flex-column">
                    <input type="text" class="form-control" asp-for="Name"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="Description d-flex align-items-center mt-4 mb-4">
                <label asp-for="Description" class="form-label me-2"></label>
                <div class="error d-flex flex-column">
                    <input type="text" class="form-control" asp-for="Description"/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="Price d-flex align-items-center mt-4 mb-4">
                <label asp-for="Price" class="form-label me-2"></label>
                <div class="error d-flex flex-column">
                    <input type="number" step="0.01" class="form-control" asp-for="Price"/>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-danger">Submit</button>
            </div>
        </form>
    </div>
    <div class="dishes mt-4">
        @foreach (var product in ViewBag.Products)
            {
                <div class="text-start">
                    <a href="/products/@product.ProductId"><h3>@product.Name</h3></a>
                </div>
            }
            </div>
            </div>
</body>
</html>