@model Association

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product (or Duck) Details (Products n' Categories)</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>
<body class = "bg-dark text-light">
    <div class="container w-50">
    <div class="header d-flex flex-column">
    <h3>@ViewBag.SingleProduct.Name</h3>
    <h4 class="pb-2 border-bottom border-secondary"><i>@ViewBag.SingleProduct.Description</i></h4>
    </div>
    <div class="details d-flex flex-column">
        <span class="mb-2">Price: @ViewBag.SingleProduct.Price</span>
    </div>
    <div class="categories d-flex flex-column">
        <div class="categoryList">
            <h4>Categories:</h4>
            @foreach (Category c in ViewBag.AssociatedCategories)
            {
                <div class="category">
                    <span class="mb-2">@c.Name</span>
                </div>
            }
        </div>
        <div class="categoryAdd">
            <form asp-action="ProdAssociationSubmission" asp-controller="Product" method="post" asp-route-id="@ViewBag.SingleProduct.ProductId" class="d-flex flex-column align-items-center">
            <div class="CategoryId d-flex align-items-center mt-4 mb-4">
                <label asp-for="CategoryId" class="form-label me-2"></label>
                <div class="error d-flex flex-column">
                    <select class="form-select" id="CategoryId" asp-for="CategoryId">
                        <option selected disabled>Select a value!</option>
                        @foreach (Category c in ViewBag.ListedCategories)
                    {
                        <option value="@c.CategoryId">@c.Name</option>
                    }
                </select>
                </div>
            </div>
            <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-danger">Submit</button>
            </div>
        </form>
        </div>
    </div>
    <div class="button d-flex justify-content-center">
        <a href="/"><button class="btn btn-secondary">Home</button></a>
    </div>
</div>

</body>
</html>