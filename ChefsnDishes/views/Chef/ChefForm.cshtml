@model Chef;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Submit a New Chef (Chefs n' Dishes)</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>
<body class="bg-dark">
    <div class="mx-auto mt-4 mb-4 w-25 text-light p-4 rounded border border-3 border-dark" style="background-color: #474747">
        <form asp-action="ChefSubmission" asp-controller="Chef" method="post">
            <div class="FirstName d-flex align-items-center mt-4 mb-4">
                <label asp-for="FirstName" class="form-label me-2"></label>
                <div class="error d-flex flex-column">
                    <input type="text" class="form-control" asp-for="FirstName"/>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="LastName d-flex align-items-center">
                <label asp-for="LastName" class="form-label me-2"></label>
                <div class="error d-flex flex-column">
                    <input type="text" class="form-control" asp-for="LastName"/>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="Birthdate d-flex align-items-center">
                <label asp-for="Birthdate" class="form-label me-2"></label>
                <div class="error d-flex flex-column">
                    <input type="date" class="form-control" asp-for="Birthdate"/>
                    <span asp-validation-for="Birthdate" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-danger w-50">Submit</button>
            </div>
        </form>
    </div>
</body>
</html>