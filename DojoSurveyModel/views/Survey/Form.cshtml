@model Survey.SurveyModel;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dojo Survey with Models</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>
<body class="bg-dark">
    <div class="mx-auto m-4 w-25 text-light p-4 rounded border border-3 border-dark" style="background-color: #474747">
        <form asp-action="SurveySubmission" asp-controller="Survey" method="post">
            <div class="NameField d-flex align-items-center">
                <span asp-validation-for="NameField"></span>
                <label asp-for="NameField" class="form-label me-2">Name:</label>
                    <input type="text" class="form-control" asp-for="NameField"/>
            </div>
            <div class="DojoField d-flex mt-4 mb-4 align-items-center">
                <span asp-validation-for="DojoField"></span>
                <label asp-for="DojoField" class="form-label me-2">Dojo:</label>
                    <select name="DojoField" class="form-select" id="DojoField" asp-for="DojoField">
                        <option selected disabled>Select Dojo!</option>
                        <option value="San Jose">San Jose</option>
                        <option value="Burbank">Burbank</option>
                        <option value="Seattle">Seattle</option>
                        <option value="Saudi Arabia">Saudi Arabia</option>
                </select>
            </div>
            <span asp-validation-for="LanguageField"></span>
            <div class="LanguageField d-flex mt-4 mb-4 align-items-center">
                <label asp-for="DojoField" class="form-label me-2">Favorite Language:</label>
                    <select asp-for="LanguageField" class="form-select w-75" id="LanguageField">
                        <option value="C#">C#</option>
                        <option value="Java">Java</option>
                        <option value="Python">Python</option>
                        <option value="MERN">MERN</option>
                    </select>
            </div>
            <span asp-validation-for="CommentField"></span>
            <div class="CommentField d-flex mt-4 mb-4 align-items-center">
                <label asp-for="CommentField" class="form-label me-2">Comments:</label>
                    <textarea id="CommentField" class="form-control" asp-for="CommentField">
                    </textarea>
            </div>
            <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-danger w-50">Submit</button>
            </div>
        </form>
    </div>
</body>
</html>